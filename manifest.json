{
  "manifest_version": 3,
  "name": "AI Research Assistant",
  "version": "1.0",
  "description": "An AI-powered tool for summarizing, writing, translating, and rewriting content.",
  "permissions": [
    "activeTab",
    "storage",
    "identity",
    "scripting",
    "aiLanguageModelOriginTrial"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "build/logo192.png",
      "48": "build/logo192.png",
      "128": "build/logo192.png"
    }
  },
  "host_permissions": ["https://*/*"],
  "icons": {
    "16": "build/logo192.png",
    "48": "build/logo192.png",
    "128": "build/logo192.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["static/css/*", "static/js/*", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "trial_tokens": ["REACT_APP_EXTENSION_ORIGIN_KEY"]
}
