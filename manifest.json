{
  "manifest_version": 3,
  "name": "AI Research Assistant",
  "version": "1.0",
  "description": "An AI-powered tool for summarizing, writing, translating, and rewriting content.",
  "permissions": ["activeTab", "storage", "identity", "https://*/"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "host_permissions": [
    "https://www.googleapis.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
